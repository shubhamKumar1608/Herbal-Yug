# Example backend environment variables
# Copy this file to `backend/.env` (do NOT commit real secrets)

# MongoDB connection string (without the /e-commerce suffix)
MONGO_URI=your-mongodb+srv://<user>:<password>@cluster0.example.mongodb.net

# Cloudinary credentials
CLOUDINARY_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_SECRET_KEY=your_secret_key

# JWT secret (use a strong random value)
JWT_SECRET=replace_with_a_strong_secret

# Admin credentials for admin routes
ADMIN_EMAIL=admin@handle.com
ADMIN_PASSWORD=admin@123

# Stripe secret key (optional)
STRIPE_SECRET_KEY=sk_test_xxx
